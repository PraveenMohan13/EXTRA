#include<stdio.h>
int main(void) {
    int n=4,l,k,j,i;
    for(i=-n;i<=n;i++)
    {
        if(i<0)
            l=-i;
        else
            l=i;
        for(k=0;k<n-l;k++)
        {
            printf(" ");
        }
        for(j=0;j<l+1;j++)
        {
            printf("* ");
        }
        printf("\n");
    }
}
-----------------------------------------------------------------------------------------------
#include<stdio.h>
int main(void) {
    int n=4,l,k,j,i;
    for(i=-n;i<=n;i++)
    {
        if(i<0)
            l=-i;
        else
            l=i;
        for(j=0;j<n+1;j++)
        {
            if(j<n-l)
                printf(" ");
            else
                printf("* ");   
        }
        printf("\n");
    }
}
